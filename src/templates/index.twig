{% extends 'layout.twig' %}

{% block content %}
    <h2>Main Page</h2>
    {% for message in flash.message("fail") %}
        <p>{{ message}}</p>
    {% endfor %}
    {% for message in flash.message("success") %}
        <p>{{ message}}</p>
    {% endfor %}

    <section id="notifications">
        <h3>Notifications:</h3>
        {% if notifications %}
            <ul>
            {% for notification in notifications %}
                <li>{{ notification.date  }}: {{ notification.notification }}</li> 
            {% endfor %}
            </ul>
        {% else %}
            <p>You have no notifications at this time</p>
        {% endif %}
        <h3>Pending Project Requests</h3>
        <h3>Pending Actions</h3>
    </section>
{% endblock %}
