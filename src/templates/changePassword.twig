{% extends 'layout.twig' %}
{% import "macros.twig" as macros %}

{% block content %}
<section id="changePasswordSection">
    <h2>Change Password</h2>
    {{ macros.displayFlashMessages(flash.message("fail"), flash.message("success")) }}
    <form id="changePasswordForm" action="{{ path_for('processChangePassword') }}" method="post">
        <fieldset>
            <label for="currentPassword">Current Password: <span class="requiredField">*</span></label>
            <input type="password" id="currentPassword" name="currentPassword" required><br>
            <label for="newPassword">New Password: <span class="requiredField">*</span></label>
            <input type="password" id="newPassword" name="newPassword" required><br>
            <label for="newPassword2">Confirm New Password: <span class="requiredField">*</span></label>
            <input type="password" id="newPassword2" name="newPassword2" required><br>
        </fieldset>  

        <div id="submitButtons">
            <button type="submit" name="action" value="save">Save</button>
            <button type="submit" name="action" value="cancel" formnovalidate>Cancel</button>
        </div>
    </form>
</section>

{% endblock %}
