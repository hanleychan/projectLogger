<section id="addUserToProjectSection">
    <h2>Add User</h2>
    <form id="addUserForm" action="{{ path_for('processAddUserToProject', {'name':project.projectName}) }}" method="post">
        <fieldset>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username"{% if postData.username %}value="{{ postData.username }}"{% endif %} maxlength="20" required>
        </fieldset>
        <div id="submitButtons">
            <button type="submit" name="action" value="add">Add</button>
            <button type="submit" name="action" value="cancel" formnovalidate>Cancel</button>
        </div>
    </form>
</section>
