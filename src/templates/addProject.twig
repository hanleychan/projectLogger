{% extends 'layout.twig' %}
{% import "macros.twig" as macros %}

{% block content %}
<section id="addProjectSection">
    <h2>Add project</h2>
    {{ macros.displayFlashMessages(flash.message("fail"), flash.message("success")) }}
    <form id="addProjectForm" action="{{ path_for('processAddProject') }}" method="post">
        <fieldset>
            <label for="projectName">Project Name:</label>
            <input type="text" id="projectName" name="projectName" maxlength="20" required><br>
        </fieldset>
        <div id="submitButtons">
            <button type="submit" name="action" value="create">Create</button>
            <button type="submit" name="action" value="cancel" formnovalidate>Cancel</button>
        </div>
    </form>
</section>
{% endblock %}

{% block scripts %}
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="{{ path_for('home') ~ "js/dismissMessages.js"  }}"></script>
{% endblock %}
