<!DOCTYPE html>
<html lang="en">
<head>
    <title>Project Logger</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ path_for('home') }}stylesheets/main.css">
    {% block head %}
    {% endblock %}
</head>
<body>
    <header>
        <h1>Project Logger</h1>
       {% if user %}
            <p>Hello {{ user.username }}</p>
            <ul>
                <li><a href="{{ path_for('home') }}">Home</a></li>
                <li><a href="{{ path_for('projects') }}">Projects</a></li>
                <li><a href="">Friends</a></li>
                <li><a href="{{ path_for('account') }}">Account</a></li>
                <li><a href="{{ path_for('logout') }}">Logout</a></li>
            </ul>
        {% else %}
            <ul>
                <li><a href="{{ path_for("login") }}">Login</a></li>
                <li><a href="{{ path_for("register") }}">Register</a></li>
            </ul>
       {% endif %}
    </header>

   {% block content %}
   {% endblock %}

    <footer>
        <p>&copy;{{ "now"|date("Y") }} Hanley Chan</p>
    </footer>
   {% block scripts %}
   {% endblock %}
</body>
</html>
